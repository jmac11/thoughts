		<link rel="stylesheet" href="/stylesheets/mobile.css" type="text/css" media="screen" />
		<% end %>
		<link rel="alternate" type="application/rss+xml" title="RSS 2.0" href="<%= rss_feed(@blog) %>" />
		<link rel="alternate" type="text/xml" title="RSS .92" href="<%= rss_feed(@blog) %>" />
	</head>
	<body>
		<div id="page">
			<%= erb(:header, :layout => false)%>
