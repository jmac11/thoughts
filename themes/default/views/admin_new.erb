<div id="content" class="widecolumn">
	<h2 class="center">Create post</h2>
	<form id="postForm" action="/admin/posts" method="POST">
	  <label for="post_title">Title</label>
	  <input type="text" name="post[title]">
	  <br/><br/>
	  <textarea name="post[body]" style="width: 500px; height: 200px;"></textarea>
	  <br/><br/>
	  <label for="post_published">Publish?</label>
	  <input type="checkbox" name="post[published]" value="published" checked="yes">
	  <br/><br/>
	  <label for="post_title">Tags (comma separated)</label>
	  <input type="text" name="tags">
	  <br/><br/>
	  <input type="submit" value="Create Post"/>
	</form>
	<script type="text/javascript" src="/javascripts/wmd/wmd.js"></script>	
</div>